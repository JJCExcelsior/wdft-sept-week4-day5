<form method="POST" action="/add-form">
  <div class="form-group">
    <label for="todoName">Name</label>
    <input name="name" type="text" class="form-control" id="todoName" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="todoDesc">Description</label>
    <input name="description" type="text" class="form-control" id="todoDesc">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>